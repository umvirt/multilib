. config.sh
cd $SRCROOT
tar -xf kmod-33.tar.xz
cd kmod-33

CC="gcc -m32" ./configure --host=$HOST \
    --prefix=/usr         \
    --bindir=/bin         \
    --libdir=/usr/lib32   \
    --sysconfdir=/etc     \
    --with-xz             \
    --with-zlib           \
    --with-zstd           \
    --with-rootlibdir=/usr/lib32 \
    --disable-manpages

make

make DESTDIR=$PWD/DESTDIR install
cp -Rv DESTDIR/usr/lib32/* /usr/lib32

cd $SRCROOT
rm -rf kmod-33
